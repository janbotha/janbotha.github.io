/*============================================
  mt_gaSelector     : Selector of the element to 
                      attach the click event to
  Example           : mt-htmlBannerDestktop
============================================*/
var mt_gaSelector = "#mt_idContainer";
/*============================================
  mt_gaCategory     : GA category to use.
============================================*/

var mt_gaCategory = $(mt_gaSelector).attr("data-mt-ga"); 
var mt_gaJourney = $(mt_gaSelector).attr("data-mt-ga-journey");
var mt_gaPage = $(mt_gaSelector).attr("data-mt-ga-page");
// Send pageview for homepage banner
$(function(){
  try {
    // Desktop tracking function is TrackGAEvent(eventCategory, eventType, eventLabel, 0);
    // Mobile tracking function is TrackGTMEvent(eventCategory, eventType, eventLabel, 0);
    TrackGAEvent(mt_gaCategory, "pageview", NextBasket.RoamingProfileId + " saw " + mt_gaJourney + " banner on " + mt_gaPage);
    //console.log("GA - pageview - seen 3Step banner on HP");
    // In the main experience comment out or remove above line
  } catch(err) {
    console.log(err.message);
  }
});

$(document).on("click", mt_gaSelector, function(e){
  try {
    //e.preventDefault(); //For Testing Purposes only. Please Remove or comment out in production
    // Desktop tracking function is TrackGAEvent(eventCategory, eventType, eventLabel, 0);
    // Mobile tracking function is TrackGTMEvent(eventCategory, eventType, eventLabel, 0);
    TrackGAEvent(mt_gaCategory, "click", NextBasket.RoamingProfileId + " clicked on HP banner");
  } catch(err) {
    console.log(err.message);
  }
});